<div class="container">
	<div class="row">

	  <!--LEFT HALF-->
	  <div class="col-md-6 left-display">
	  	<img class="product-display" id="top-display" src="assets/top_style_bandeau_image.png">
	  	<br>
	  	<br>
	  	<img class="product-display" id="bottom-display" src="assets/bottom_style_bandeau_image.png" class="img-responsive">
	  </div>

	  <!--RIGHT HALF-->
	  <div class="col-md-6 right-display">
		<button type="button" class="btn btn-primary product-page">Buy</button>
		<label class="price product-page">$ 149.00</label>
		<br>

		<div class="customisation-display">
			
			<!--TABS FOR STYLE AND PRINT-->			
			<div role="tabpanel">
				<ul class="nav nav-tabs nav-justified" id="customiser-tabs" role="tablist">
			  		<li role="presentation" class="active" id="styles-tab"><a href="#styles-display" aria-controls="styles-display" role="tab" data-toggle="tab">Styles</a></li>
			  		<li role="presentation" id="prints-tab"><a href="#prints-display" aria-controls="prints-display" role="tab" data-toggle="tab">Prints</a></li>
				</ul>
			</div>

			<div role="tab-content">
				<!--STYLES DISPLAY-->
				<div role="tabpanel" class="tab-pane active" id="styles-display">
					<label for="style-tops" class="product-page">Tops</label>
					<br>
					<img class="style-thumbnail" src="assets/top_style_bandeau_thumb.png">
					<img class="style-thumbnail" src="assets/top_style_triangle_thumb.png">
					<br>
					<label for="style-bottoms" class="product-page">Bottoms</label>
					<br>
					<img class="style-thumbnail" src="assets/bottom_style_bandeau_thumb.png">
					<img class="style-thumbnail" src="assets/bottom_style_triangle_thumb.png">
				</div>

				<!--PRINTS DISPLAY-->
				<div role="tabpanel" class="tab-pane hide" id="prints-display">
					<!--DROPDOWN TO SELECT PART-->
					<div class="dropdown form-oontrol">
					  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
					    Select part
					    <span class="caret"></span>
					  </button>
					  <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
					    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Cup</a></li>
					    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Strap</a></li>
					    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Bottom</a></li>
					  </ul>
					</div>
					<!--PRINT THUMBNAILS-->
					<label class="product-page">Modern</label>
					<br>
					<img class="print-thumbnail" src="assets/print_floral.png">
					<img class="print-thumbnail" src="assets/print_geo.png">
					<img class="print-thumbnail" src="assets/print_retro.png">
					<br>
					<label class="product-page">Classic</label>
					<br>
					<img class="print-thumbnail" src="assets/print_pineapple.png">
					<img class="print-thumbnail" src="assets/print_tropical.png">
					<img class="print-thumbnail" src="assets/print_ice.png">
				</div>
			</div>
